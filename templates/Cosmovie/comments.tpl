<div class="film-comment">
    <div class="comment_author_name"><b>{login}</b><span> {date}</span></div>
    <p>{comment}</p>
    <div class="rate_like-dislike">
        [rating-plus]<span class="fa fa-thumbs-up"></span>[/rating-plus]
        <span class="like">{likes}</span>
        [rating-minus]<span class="fa fa-thumbs-down"></span>[/rating-minus]
        <span class="dislike">{dislikes}</span>
    </div>
</div>
